generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum RoleType {
  USER
  ADMIN
  PREMIUM
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  username  String   @unique
  email     String   @unique
  gender    Gender
  birthDate DateTime
  password  String
  roleId    Int
  discussions Discussion[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role      Role     @relation(fields: [roleId], references: [id])

  @@index([roleId])
}

model Discussion {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Role {
  id        Int      @id @default(autoincrement())
  roleName  RoleType @unique
  users     User[]

  @@index([roleName]) 
}